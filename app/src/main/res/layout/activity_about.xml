<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_margin"
        tools:context=".AboutActivity">

    <TextView
            android:id="@+id/aboutAppText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/medium_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:justificationMode="inter_word"
            android:layout_margin="@dimen/element_padding"
            android:text="@string/about_app_text" tools:targetApi="o"/>

    <TextView
            android:id="@+id/tastediveUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_padding"
            android:text="@string/tastedive_url"
            android:autoLink="web"
            android:textSize="@dimen/medium_text"
            app:layout_constraintTop_toBottomOf="@id/aboutAppText"
            app:layout_constraintStart_toStartOf="@id/aboutAppText"/>

</androidx.constraintlayout.widget.ConstraintLayout>